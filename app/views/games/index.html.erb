<div class='page-wrapper'>
  <div>
    <span class='featured'>Featured Game of the Moment:</span>
    <% @underdogs = @games.sort_by {|game| game.votes.size} %>
    <% @featured_underdog = @underdogs[0..2].sample %>
    <span class='featured-title'><a href="/games/<%= @featured_underdog.id %>"><%= @featured_underdog.name %></a></span>
  </div>
  <div class='section'>
  <h2>Most Popular Games</h2>
